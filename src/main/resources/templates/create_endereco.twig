{% extends 'template.twig' %}

{% block content %}

    <div class="listPessoas">
        <h1>Enderecos:</h1>
    </div>

<br><br>

    <ul class="list-group">
        {% for endereco in enderecos %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ endereco.cidade }}, Estado: {{ endereco.estado }}, Cep: {{ endereco.cep }}, Endereco: {{ endereco.logradouro }} 
            </li>
        {% endfor %}
    </ul>

    <br><br>
    <h1>Criar:</h1>
    <br><br>

    <form action="/endereco/create" method="POST" class="needs-validation" novalidate>
        <input type="hidden" name="pessoa_id" value="{{ pessoa_id }}">
        <div class="form-group">
            <label for="inputAddress">Address</label>
            <input type="text" name="logradouro" class="form-control" id="inputAddress" required>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" name="cidade" class="form-control" id="inputCity" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">State</label>
                <select id="inputState" name="estado" class="form-control">
                    <option selected>Choose...</option>
                    <option>...</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" name="cep" class="form-control" id="inputZip" required>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-primary" >Save</button>
    </form>

{% endblock %}
